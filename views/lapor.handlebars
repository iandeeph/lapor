{{#section 'title'}}
    Lapor - Portal IT Cermati
{{/section}}
{{error}}

<div id="laporPageBody" class="row container">
    <form action="" method="post">
        <div class="col s12 mt-20">
            <div class="col s12 mb-30">
                <span class="font-40">Buat Permintaan</span>
            </div>
            <div class="input-field col s12">
                <select id="laporjenis" name="lapor[jenis]" required>
                    <option value="" disabled selected>Pilih Jenis Laporan</option>
                    <option value="Permintaan Perlengkapan & Akses Login Anak Baru">Permintaan Perlengkapan & Akses Login Anak Baru</option>
                    <option value="Informasi Anak Resign">Informasi Anak Resign</option>
                    <option value="Permintaan Pergantian Perangkat (mouse rusak, laptop error, dll)">Permintaan Pergantian Perangkat (mouse rusak, laptop error, dll)</option>
                    <option value="Setting printer">Setting printer</option>
                    <option value="Tambah Akses Baru">Tambah Akses Baru</option>
                    <option value="Tambah Aplikasi">Tambah Aplikasi</option>
                    <option value="Troubleshoot/Perangkat Error (Laptop, Mouse, Headset)">Troubleshoot/Perangkat Error (Laptop, Mouse, Headset)</option>
                    <option value="Masalah Telepon">Masalah Telepon</option>
                    <option value="Lainnya..">Lainnya..</option>
                </select>
                <label>Jenis Laporan</label>
            </div>
            <div class="row">
                <div class="col s12" id="templateBlock">

                </div>
            </div>
            <div class="col s12">
                <span class="font-20 green-text" id="message">{{message}}</span>
            </div>
        </div>
    </form>
</div>