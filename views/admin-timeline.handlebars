{{#section 'title'}}
    Timeline - Portal IT Cermati
{{/section}}
{{error}}

<div class="row container">
    <div class="col s12 mt-20">
        <div class="col s12 mb-30 center">
            <span class="font-40">Timeline Pekerjaan</span>
        </div>
        <div class="col s12">
            <span class="font-20 green-text" id="message">{{message}}</span>
        </div>
        <div class="row">
            <div class="col s12 container">
                <div class="row">
                    {{#each layoutTemplate}}
                        <div class="col s12 mb-30">
                            <div class="col s12 center">
                                <span>{{@key}}</span>
                                <div class="divider mt-10"></div>
                            </div>
                            {{#each this}}
                                <div class="col s12 mt-10">
                                    <div class="col s4 right-align">
                                        <span class="font-20">{{dateTime tanggalSelesai}}</span>
                                    </div>
                                    <div class="col s8">
                                        <span class="font-20">{{assign}} - {{jenis}} ({{nama}}-{{divisi}})</span>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>